---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/ludaxISO1.svg" />
    <link rel="stylesheet" href="./globalStyle.css" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="bg-blackL text-whiteL w-screen 2xl:w-3/4 2xl:m-auto 2xl:shadow-2xl"
  >
    <slot />
  </body>
</html>
